<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo2"
    android:padding="16dp">

    <!-- ðŸ”¹ Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AAFFFFFF"
        android:paddingVertical="8dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp">

        <TextView
            android:text="Orders"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/adamina"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnMenuEditor"
            android:text="Edit Menu"
            android:fontFamily="@font/adamina"
            android:textSize="16dp"
            android:backgroundTint="#F153FF00"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginRight="8dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Scrollable Orders Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#4BFFFFFF"
        android:background="@drawable/boorder"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- ðŸŸ¡ Pending Orders -->
            <TextView
                android:id="@+id/tvPendingLabel"
                android:text="Pending Orders"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:background="#AAFFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/pendingOrdersContainer"
                android:orientation="vertical"
                android:fontFamily="@font/adamina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:divider="@color/black" />

            <!-- ðŸŸ¢ Ready Orders -->
            <TextView
                android:id="@+id/tvReadyLabel"
                android:text="Ready Orders"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AAFFFFFF"
                android:padding="8dp"
                android:fontFamily="@font/adamina"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/readyOrdersContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:fontFamily="@font/adamina"
                android:divider="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
