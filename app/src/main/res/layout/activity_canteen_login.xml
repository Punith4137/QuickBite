<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photo2"
    android:padding="15dp"
    android:paddingTop="30dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="80dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:layout_height="500dp">
        <LinearLayout android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/backgroundcol2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Canteen Member Login"
                android:textSize="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/adamina"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/boorder"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:orientation="vertical">

                    <EditText
                        android:id="@+id/etId"
                        android:gravity="center"
                        android:textColorHint="#666666"
                        android:textSize="20dp"
                        android:fontFamily="@font/adamina"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID"/>
                    <EditText
                        android:id="@+id/etPass"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:fontFamily="@font/adamina"
                        android:textColorHint="#666666"
                        android:textColor="#000000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"/>


            </LinearLayout>

            <Button
                android:id="@+id/btnEnter"
                android:backgroundTint="#F153FF00"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_height="wrap_content"
                android:text="Enter"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
