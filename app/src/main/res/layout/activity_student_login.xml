<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photo2"
    android:padding="15dp"
    android:paddingTop="30dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="80dp"
        android:layout_height="350dp">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/backgroundcol2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Student Login"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/adamina"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etRoll"
                android:hint="Roll No"
                android:gravity="center"
                android:fontFamily="@font/adamina"
                android:textColorHint="#666666"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/passwordInput"
                android:hint="Password"
                android:gravity="center"
                android:inputType="textPassword"
                android:fontFamily="@font/adamina"
                android:textColorHint="#666666"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnLogin"
                android:text="Login"
                android:backgroundTint="#53FF00"
                android:textColor="@color/black"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRegister"
                android:text="Register"
                android:backgroundTint="#53FF00"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/adamina"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCanteen"
                android:text="Canteen Member"
                android:backgroundTint="#F153FF00"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/adamina"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
