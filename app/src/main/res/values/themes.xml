<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickBite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/adamina</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="YellowDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">#FFF8DC</item> <!-- Light yellow (same as item cards) -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorSurface">#FFF9C4</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonBlack</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonBlack</item>
        <item name="android:windowElevation">12dp</item>
    </style>

    <style name="DialogButtonBlack" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.QuickBite" parent="Base.Theme.QuickBite" />
